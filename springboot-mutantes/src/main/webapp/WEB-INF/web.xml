<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://java.sun.com/xml/ns/javaee" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
version="2.5">

<display-name>Simple Servlet Application</display-name>
	<servlet>
		<servlet-name>servletPost</servlet-name>
		<servlet-class>com.mutantes.springbootmutantes.controllers.Servlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>servletPost</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>MutantServlet</servlet-name>
		<servlet-class>com.mutantes.springbootmutantes.controllers.MutantServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>MutantServlet</servlet-name>
		<url-pattern>/isMutant</url-pattern>
	</servlet-mapping>
	
</web-app>